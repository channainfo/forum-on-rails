<% unless current_user.present? %>
  <% content_for :jumbotron do %>
    <header class="jumbotron mb-4 bg-dark text-center">
      <div class="container">
        <h1 class="display-3">A Warm Welcome!</h1>
        <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
      </div>
    </header>
  <% end %>
<% end %>

<div class="row mt-3">
  <div class="col-md-3">
    <a href="" class="btn btn-sm btn-success btn-block mb-3">
      <span class="font-weight-bolder">NEW QUESTION</span>
    </a>
    <hr>
    <ul class="list-group">
      <li class="list-group-item border-0">
        <i class="fas fa-star w-25"></i>
        <strong>All Questions</strong>
      </li>
      <li class="list-group-item border-0">
        <i class="fas fa-fire w-25"></i>
        <strong>Popular</strong>
      </li>
      <li class="list-group-item border-0">
        <i class="fas fa-check w-25"></i>
        <strong>Solved</strong>
      </li>
      <li class="list-group-item border-0">
        <i class="fas fa-times w-25"></i>
        <strong>Unsolved</strong>
      </li>
      <li class="list-group-item border-0">
        <i class="fas fa-comment-slash w-25"></i>
        <strong>No Replies</strong>
      </li>
    </ul>
    <hr>
    <ul class="list-group mt-3">
      <% Category.all.each do |c| %>
        <li class="list-group-item border-0">
          <i class="fas fa-folder w-25"></i>
          <strong>
            <%= c.title %>
          </strong>
        </li>
      <% end %>
    </ul>
    <hr>
  </div>

  <div class="col-md-9">
    <% @questions.each do |q| %>
      <div class="card mb-4 rounded-0 border-0">
        <div class="card-body p-0">
          <span class='h4'>
            <%= link_to q.title, q %>
          </span>

          <span class='float-right text-muted'>
            <i class="far fa-comment"></i>
            <%= q.replies_count %>
          </span>
        </div>
        <div class="d-inline">
          <div class="float-left">
            <strong class='d-inline text-info'>
              <%= q.user.username %>
            </strong>
            <span>
              asked <%= time_ago_in_words q.created_at %>
            </span>
          </div>
          <div class="float-right">
            <span class="badge badge-warning">
              <%= q.category.title %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
    <hr>
    <div class='paginator'>
      <%= link_to_prev_page @questions, '« Previous' %>
      <%= link_to_next_page @questions, 'More »' %>
    </div>
  </div>
</div>